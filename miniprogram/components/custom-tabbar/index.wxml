<!--components/custom-tabbar/index.wxml-->
<view class="tab-bar">
  <!-- 左侧按钮 -->
  <view class="tab-item" bindtap="switchTab" data-index="0">
    <image class="tab-icon" src="{{activeIndex === 0 ? '/image/tree_group_after.png' : '/image/tree_group.png'}}" />
    <text class="tab-text {{activeIndex === 0 ? 'active' : ''}}">树友圈</text>
  </view>

  <!-- 中间特殊按钮 -->
  <view class="center-container">
    <view class="center-tab" bindtap="switchTab" data-index="1">
    <image class="camera-icon" src="{{activeIndex === 1 ? '/image/camera.png' : '/image/camera.png'}}" />
  </view>
    <text class="center-label" style="position: relative; left: 3rpx; top: -4rpx">观察壹棵树</text>
  </view>

  <!-- 右侧按钮 -->
  <view class="tab-item" bindtap="switchTab" data-index="2">
    <image class="tab-icon" src="{{activeIndex === 2 ? '/image/my_tree_after.png' : '/image/my_tree.png'}}" />
    <text class="tab-text {{activeIndex === 2 ? 'active' : ''}}">我的树</text>
  </view>
</view>