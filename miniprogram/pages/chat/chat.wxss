/* pages/personal/chat/chat.wxss */
.container {
  height: 100vh;
  background: #FFFFFF;
}

.header {
  background: #fff;
  padding: 15rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
}

.chat-area {
  height: calc(100vh - 220rpx);
  padding: 20rpx 30rpx;
}

.message-container {
  display: flex;
  flex-direction: column;
}

.avator {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.message {
  margin: 20rpx 0;
  display: flex;
  align-items: flex-start;
}

.message.left {
  justify-content: flex-start;
}

.message.right {
  justify-content: flex-end;
}

.content-box {
  max-width: 500rpx;
  position: relative;
  background: #F2F3F5;
  border-radius: 20rpx 20rpx 20rpx 20rpx;
  padding: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 0rpx 20rpx 20rpx 20rpx;
}

.sender {
  background: #F2F3F5;
  border-radius: 20rpx 0rpx 20rpx 20rpx;
}

.content {
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 28rpx;
  color: #1E0417;
  text-align: left;
  font-style: normal;
  padding: 10rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}

.input-area {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 190rpx;
  background: #F2F3F5;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.input-box {
  display: flex;
  align-items: center;
}

.icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

input {
  flex: 1;
  background: #FFFFFF;
  border-radius: 40rpx;
  margin: 0 20rpx;
  height: 72rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
  padding-left: 10rpx;
}

.placeholder{
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 28rpx;
  color: #B5B7B8;
  line-height: 40rpx;
  text-align: left;
  font-style: normal;
}

.send-btn {
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
}

