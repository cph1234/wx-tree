/* pages/home/hand_in_homework/hand_in_homework.wxss */
.container {
  padding: 30rpx;
  background-color: #FFFFFF;
}

.section {
  display: flex;
  flex-direction: column;
  position: relative;
  margin-bottom: 10rpx;
  width: 100%;
}

.picker {
  padding: 20rpx;
  background: #F6DB74;
  width: 690rpx;
  height: 84rpx;
  border-radius: 38rpx;
  text-align: center;
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 30rpx;
  color: #444243;
  font-style: normal;
}

.info-box {
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 5rpx 0;
}

.info-row.single-line {
  border-bottom: none;
  padding: 0;
}

.info-item {
  flex: 1;
  padding: 12rpx 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.info-item.full-width {
  width: 100%;
}

.label {
  color: #898781;
  font-size: 26rpx;
  padding-right: 10rpx;
}

.value {
  color: #1E0417;
  font-weight: 500;
  font-size: 26rpx;
  padding-right: 10rpx;
}

.custom-btns {
  display: flex;
  justify-content: space-between;
  margin: 40rpx 0;
  background-color: #F2F3F5;
  border-radius: 28rpx;
}

.btn-container {
  position: relative;
  width: 320rpx;
  height: 80rpx;
  border-radius: 30rpx
  ;
}

.btn-bg {
  width: 100%;
  height: 100%;
}

.large-btn-bg {
  width: 100%;
  height: 100rpx;
  margin-top: 10rpx;
}

.btn-text-active {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 32rpx;
  font-weight: 500;
}

.btn-text {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 32rpx;
  color: #898781;
}

.note {
  display: flex;
}

.work-note-1{
  height: 24rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 24rpx;
  color: #898781;
  line-height: 24rpx;
  text-align: left;
  font-style: normal;
  margin-left: auto;
}

.homework-info{
  display: flex;
  flex-direction: column;
}

.input-title {
  width: 690rpx;
  height: 32rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 36rpx;
  color: #1E0417;
  line-height: 32rpx;
  text-align: left;
  font-style: normal;
}

.line {
  width: 690rpx;
  height: 2rpx;
  border: 2rpx solid #F2F3F5;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.input-intro{
  width: 100%;
  height: 146rpx;
  background: #F2F3F5;
  border-radius: 20rpx;
  Vertical-align: top;
  padding: 15rpx;
  margin-bottom: 20rpx;
}

.input-desp {
  width: 100%;
  height: 146rpx;
  border-radius: 20rpx;
  Vertical-align: top;
  padding: 15rpx;
  margin-bottom: 20rpx;  
  border: 2rpx solid #E6E9EE;
}

.placeholder-title {
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 36rpx;
  color: #C9CCD3;
  font-style: normal;
}

.placeholder-intro {
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 26rpx;
  color: #898781;
  line-height: 42rpx;
  text-align: left;
  font-style: normal;
}

.placeholder-other {
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 26rpx;
  color: #C6C8CE;
  line-height: 26rpx;
  text-align: right;
  font-style: normal;
}

.add-photo {
  width: 28rpx;
  height: 28rpx;
  margin-left: auto;
  margin-right: 5rpx;
}

.add-text {
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 28rpx;
  color: #898781;
  text-align: left;
  font-style: normal;
}

.photo-big {
  width: 690rpx;
  height: 690rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 20rpx;
}

.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
  background: #fff;
  border-radius: 16rpx;
}

.author-label {
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 26rpx;
  color: #898781;
  line-height: 26rpx;
  text-align: right;
  font-style: normal;
}

.textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border-radius: 8rpx;
}

.word-count {
  text-align: right;
  color: #999;
  font-size: 24rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.description {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
}

.d-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.d-title {
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 28rpx;
  color: #1E0417;
  text-align: left;
  font-style: normal;
  margin-right: 15rpx;
}

.d-note {
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 22rpx;
  color: #898781;
  text-align: left;
  font-style: normal;
}

.upload-section {
  display: flex;
  flex-wrap: wrap;
  gap: 4rpx;
  justify-content: space-around;
}

.upload-item {
  width: calc((100% - 20rpx) / 4);
  text-align: center;
}

.add-btn {
  width: 162rpx;
  height: 162rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 25rpx;
  color: #999;
}

.upload-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.note-word {
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 24rpx;
  color: #898781;
  line-height: 24rpx;
  text-align: left;
  font-style: normal;
}

.sync-word {
  margin-left: 10rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 26rpx;
  color: #1E0417;
  text-align: left;
  font-style: normal;
}

.sync-option {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  color: #666;
}

.publish-btn {
  background: #1E0417;
  text-align: center;
  padding: 30rpx;
  border-radius: 50rpx;
  width: 486rpx;
  margin: 40rpx 0;
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 30rpx;
  color: #F2F3F5;
  font-style: normal;
  margin-left: auto;
}

.add-hw-area {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
}

.btn-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 30rpx;
}

.btn-image {
  height: 72rpx;
  width: 72rpx;
}

.text-other {
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 22rpx;
  color: #898781;
  text-align: right;
  font-style: normal;
}