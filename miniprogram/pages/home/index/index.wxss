/* pages/index/index.wxss */
/* WXSS */
.search-container {
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
  background: #fff;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 30rpx;
  margin-right: 30rpx;
}

.search-box image{
  width: 48rpx;
  height: 48rpx;
}

.filter-picker {
  position: relative;
  padding: 12rpx 24rpx;
  margin-right: 24rpx;
  border-radius: 30rpx 0 0 30rpx; 
  background: #F6DB74; 
  width: line-width;
  height: line-height;
}

.filter-text {
  font-size: 36rpx;
  color: #444243;

}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333; 
  padding: 0 20rpx;
  background: transparent;
}

.placeholder-style {
  color: #999;
}

.notification {
  position: relative;
  padding: 10rpx;
}

.notification-icon {
  width: 48rpx;
  height: 48rpx;
}

.badge {
  position: absolute;
  right: 4rpx;
  top: 4rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ff4d4f;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 自定义导航栏 */
.custom-navbar {
  padding: 10px 15px;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.nav-time {
  font-size: 12px;
  color: #666;
}

.nav-title {
  font-size: 18px;
  font-weight: bold;
  margin-top: 5px;
}

/* 导航标签 */
.nav-tabs {
  white-space: nowrap;
  padding: 10px;
  background: #fff;
}

.tab {
  display: inline-block;
  padding: 8px 15px;
  margin-right: 20px;
  color: #666;
}

.tab.active {
  color: #07c160;
  border-bottom: 2px solid #07c160;
}

/* 动态卡片 */
.post-card {
  padding: 15px;
  background: #fff;
  margin-bottom: 10px;
  border-bottom: 1px solid #eee;
}

.user-info {
  margin-top: 10rpx;
  display: grid;
  align-items: center;
  grid-template-columns: 100rpx auto 100rpx 70rpx;
  margin-bottom: 20rpx;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.image-sx {
  width: 40rpx;
  height: 40rpx;
}

.username {
  font-weight: bold;
  margin-right: 10px;
}

.time {
  color: #999;
  font-size: 12px;
  flex-grow: 1;
}

.follow-status {
  color: #07c160;
  font-size: 12px;
}

.post-content {
  line-height: 1.5;
  margin-bottom: 15px;
}

/* 互动区域 */
.interaction {
  display: flex;
  align-items: center;
  color: #666;
}

.icon {
  width: 18px;
  height: 18px;
  margin-right: 5px;
}

.like, .comment {
  display: flex;
  align-items: center;
  margin-right: 20px;
}

/* 九宫格图片展示 */
/* 容器基础样式 */
.grid-container {
  display: flex;
  flex-wrap: wrap;
  gap: 4rpx; /* 图片间距 */
  margin-top: 20rpx;
}

/* 单张图片样式 */
.single-image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

/* 多张图片通用样式 */
.grid-image {
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

/* 不同数量图片的尺寸计算 */
.grid-image.two-columns {
  width: calc((100% - 4rpx) / 2);
  height: calc((100% - 4rpx) / 2);
}

.grid-image.three-columns {
  width: calc((100% - 8rpx) / 3);
  height: calc((100% - 8rpx) / 3);
}

/* 图片通用样式 */
.grid-image image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 超过9张的遮罩层 */
.image-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

/* 评论区 */
.comment-section {
  margin-top: 15px;
  background: #f5f5f5;
  border-radius: 8px;
  padding: 10px;
}

.comment-item {
  font-size: 14px;
  line-height: 1.4;
  margin-bottom: 8px;
}

.comment-user {
  color: #07c160;
  margin-right: 5px;
}

.reply {
  margin-left: 20px;
}

/* 底部导航 */
.tab-bar {
  display: flex;
  justify-content: space-around;
  padding: 10px 0;
  background: #fff;
  border-top: 1px solid #eee;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #666;
}

.tab-item.active {
  color: #07c160;
}

.tab-icon {
  width: 24px;
  height: 24px;
  margin-bottom: 3px;
}