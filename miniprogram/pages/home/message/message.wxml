<!--pages/home/message/message.wxml-->
<view class="container">
  <!-- 顶部切换栏 -->
  <view class="tabs">
    <view 
      class="tab-item {{currentTab === 0 ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-index="0"
    >
      赞
      <text class="badge">{{counts.like}}</text>
    </view>
    <view 
      class="tab-item {{currentTab === 1 ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-index="1"
    >
      评论
      <text class="badge">{{counts.comment}}</text>
    </view>
    <view 
      class="tab-item {{currentTab === 2 ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-index="2"
    >
      新增粉丝
      <text class="badge">{{counts.fans}}</text>
    </view>
  </view>

  <!-- 内容区域 -->
  <view class="content">
    <!-- 点赞列表 -->
    <block wx:if="{{currentTab === 0}}">
      <view class="item" wx:for="{{likeList}}" wx:key="index">
        <image class="avatar" src="{{item.avatar}}"></image>
        <view class="info">
          <view class="username">{{item.username}}</view>
          <view class="action">赞了你的{{item.content}}</view>
          <view class="time">{{item.time}}</view>
        </view>
        <image class="preview" src="{{item.previewImage}}"></image>
        <!-- 分割线 -->
        <view class="divider"></view>
      </view>
    </block>

    <!-- 评论列表（结构示例） -->
    <block wx:if="{{currentTab === 1}}">
      <view class="item" wx:for="{{commentList}}" wx:key="index">
        <image class="avatar" src="{{item.avatar}}"></image>
        <view class="info">
          <view class="username">{{item.username}}</view>
          <view class="action">{{item.content}}</view>
          <view class="time">{{item.time}}</view>
        </view>
        <image class="preview" src="{{item.previewImage}}"></image>
        <!-- 分割线 -->
        <view class="divider"></view>
      </view>
    </block>

    <!-- 新增粉丝列表（结构示例） -->
    <block wx:if="{{currentTab === 2}}">
      <!-- 粉丝项结构 -->
    </block>
  </view>
</view>