/* pages/personal/my_timeline/my_timeline.wxss */
.container {
  background: #FFFFFF;
  min-height: 100vh;
  padding: 30rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.picker{
  padding: 20rpx;
  background: #F2F3F5;
  width: 690rpx;
  height: 84rpx;
  border-radius: 38rpx;
  text-align: center;
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 30rpx;
  color: #444243;
  font-style: normal;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.year-title {
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 30rpx;
  color: #444243;
  line-height: 30rpx;
  text-align: left;
  font-style: normal;
}

.arrow-down {
  width: 20rpx;
  height: 18rpx;  
}


/* 时间轴主线 */
.timeline {
  width: 100%;
  display: flex;
  flex-direction: column;
}

