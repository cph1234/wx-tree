.year-group {
  margin-bottom: 60rpx;
  display: flex;
  flex-direction: column;
}

.year {
  font-family: Arial, Arial;
  font-weight: normal;
  font-size: 32rpx;
  color: #1E0417;
  line-height: 32rpx;
  text-align: left;
  font-style: normal;
  margin-bottom: 20rpx;
}

.record {
  width: 100%;
}

.record-item {
  margin-bottom: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

/* 时间标记 */
.time {
  width: 170rpx;
  padding-right: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin-bottom: auto;
}

.day {
  width: 46rpx;
  height: 40rpx;
  display: block;
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
}

.month {
  width: 50rpx;
  height: 24rpx;
  font-family: Arial, Arial;
  font-weight: normal;
  font-size: 24rpx;
  color: #1E0417;
  line-height: 24rpx;
  text-align: justify;
  font-style: normal;
}

/* 内容区域 */
.content {
  width: 100%;
  background: #fff;
  border-radius: 12rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.tree-image {
  height: 200rpx;
  width: 200rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}

.description {
  width: 320rpx;
  height: 160rpx;
  margin-top: 20rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 28rpx;
  color: #898781;
  line-height: 40rpx;
  text-align: justify;
  font-style: normal;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis; /* 当内容超出时显示省略号 */
  word-break: break-all; /* 防止长单词无法换行 */
}