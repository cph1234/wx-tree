/* pages/personal/my_group/my_group.wxss */
.list {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
}

.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.text-info {
  display: flex;
  flex-direction: column;
}

.home-info {
  display: flex;
  flex-direction: row;
}

.username {
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 30rpx;
  color: #1E0417;
  line-height: 30rpx;
  text-align: left;
  font-style: normal;
  margin-bottom: 10rpx;
}


.btn-container {
  display: flex;
  flex-direction: row;
}


.status.submitted {
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 28rpx;
  color: #898781;
  text-align: left;
  font-style: normal;
}

.status.unsubmitted {
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 28rpx;
  color: #E3A2C6;
  text-align: left;
  font-style: normal;
}

.home-text {
  margin-left: 10rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 28rpx;
  color: #8DA5C9;
  text-align: left;
  font-style: normal;
}

.home-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 148rpx;
  height: 60rpx;
  background: #F1B1DF;
  box-shadow: 0rpx 8rpx 14rpx 0rpx rgba(241,177,223,0.5);
  border-radius: 30rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 24rpx;
  color: #1E0417;
  font-style: normal;
  margin-right: 10rpx;
}
