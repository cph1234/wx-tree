/* pages/personal/tree_manage/tree_manage.wxss */
.container {
  padding: 20rpx;
  background-color: #FFFFFF;
  min-height: 100vh;
  align-items: center;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.picker{
  padding: 20rpx;
  background: #F2F3F5;
  width: 690rpx;
  height: 84rpx;
  border-radius: 38rpx;
  text-align: center;
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 30rpx;
  color: #444243;
  font-style: normal;
}

.year {
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 30rpx;
  color: #444243;
  line-height: 30rpx;
  text-align: left;
  font-style: normal;
}

.card-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-top: 30rpx; 
  padding-bottom: 30rpx;
}

.card-list {
  display: flex;
  width: 690rpx;
}

.info-card {
  position: relative;
  width: 690rpx;
  height: 300rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.background-image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.content {
  position: relative;
  z-index: 1;
  margin-left: 30rpx;
}

.tree-name {
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 28rpx;
  color: #1E0417;
  line-height: 28rpx;
  text-align: left;
  font-style: normal;
}

.contact-leader {
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 28rpx;
  color: #FAF5E5;
  line-height: 28rpx;
  text-align: left;
  font-style: normal;
  text-decoration-line: underline;
}

.info-box {
  margin-right: 20rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 5rpx 0;
}

.info-row.single-line {
  border-bottom: none;
  padding: 0;
}

.info-item {
  flex: 1;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.info-item.full-width {
  width: 100%;
}

.label {
  color: #898781;
  font-size: 26rpx;
  padding-right: 10rpx;
  margin-bottom: 5rpx;
}

.value {
  color: #1E0417;
  font-weight: 500;
  font-size: 26rpx;
  padding-right: 10rpx;
}

.contact-btn {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #FFD54F;
  color: #333;
  font-size: 24rpx;
  border-radius: 8rpx;
  margin: auto 0;
}

.add-btn {
  background: #1E0417;
  text-align: center;
  padding: 10rpx;
  border-radius: 50rpx;
  width: 690rpx;
  margin: 40rpx 0;
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 30rpx;
  color: #F2F3F5;
  font-style: normal;
}