/* pages/personal/my_homework/my_homework.wxss */
.container {
  background: #FFFFFF;
  min-height: 100vh;
  padding: 30rpx;
}

.header {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.picker{
  padding: 20rpx;
  background: #F2F3F5;
  width: 690rpx;
  height: 84rpx;
  border-radius: 38rpx;
  text-align: center;
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 30rpx;
  color: #444243;
  font-style: normal;
}

.year-title {
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 30rpx;
  color: #444243;
  line-height: 30rpx;
  text-align: left;
  font-style: normal;
}

/* 我的作业时间轴样式 */
.timeline-container {
  width: 690rpx;
  background: #FFFFFF;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
}

.timeline-item {
  position: relative;
  padding-left: 40rpx;
  margin: 20rpx 0;
}

.timeline-line {
  position: absolute;
  left: 19rpx;
  top: 24rpx;
  bottom: -30rpx;
  width: 2rpx;
  border: 2rpx solid #D1D4D5;
}

.timeline-dot {
  position: absolute;
  left: 10rpx;
  top: 20rpx;
  width: 20rpx;
  height: 20rpx;
  background: #99AB64;
  border-radius: 50%;
  z-index: 2;
}

.timeline-card {
  display: flex;
  flex-direction: row;
  padding-left: 10rpx;
}

.homework-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 36rpx;
}

/* 时间轴主线 */
.timeline {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.card-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 30rpx;
}

.card-list {
  display: flex;
  width: 690rpx;
}

.info-card {
  position: relative;
  width: 690rpx;
}

.content {
  display: flex;
  flex-direction: column;
  padding: 30rpx 30rpx 0rpx 30rpx;
  background: #F2F3F5;
  border-radius: 30rpx 30rpx 0rpx 0rpx;
}

.tree-name {
  font-family: PingFangSC, PingFang SC;
  font-weight: 500;
  font-size: 32rpx;
  color: #1E0417;
  text-align: justify;
  font-style: normal;
}

.post-info {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 116rpx;
  height: 36rpx;
  background: #E6E7E9;
  border-radius: 18rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 24rpx;
  color: #898781;
  font-style: normal;
}

.info-box {
  margin-right: 20rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 5rpx 0;
}

.info-row.single-line {
  border-bottom: none;
  padding: 0;
}

.info-item {
  flex: 1;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.info-item.full-width {
  width: 100%;
}

.label {
  color: #898781;
  font-size: 26rpx;
  padding-right: 10rpx;
  margin-bottom: 5rpx;
}

.value {
  color: #1E0417;
  font-weight: 500;
  font-size: 26rpx;
  padding-right: 10rpx;
}





