.year-group {
  margin-bottom: 60rpx;
  display: flex;
  flex-direction: column;
}

.year {
  font-family: Arial, Arial;
  font-weight: normal;
  font-size: 32rpx;
  color: #1E0417;
  line-height: 32rpx;
  text-align: left;
  font-style: normal;
  margin-bottom: 20rpx;
}

.record {
  width: 100%;
}

.record-item {
  margin-bottom: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

/* 时间标记 */
.time {
  width: 170rpx;
  padding-right: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin-bottom: auto;
}

.day {
  width: 46rpx;
  height: 40rpx;
  display: block;
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
}

.month {
  width: 50rpx;
  height: 24rpx;
  font-family: Arial, Arial;
  font-weight: normal;
  font-size: 24rpx;
  color: #1E0417;
  line-height: 24rpx;
  text-align: justify;
  font-style: normal;
}

.load-more {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 690rpx;
  height: 48rpx;
  text-align: center;
  color: #999;
  background: #EAEBEE;
  border-radius: 0rpx 0rpx 30rpx 30rpx;
  margin-top: 0rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  font-size: 22rpx;
  color: #898781;
  line-height: 24rpx;
  text-align: justify;
  font-style: normal;
  margin-bottom: 20rpx;
}


